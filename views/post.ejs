<html>
    <head>
        <link href = "/styles/header.css" rel = 'stylesheet'></link>
        <link href = "/styles/footer.css" rel = 'stylesheet'></link>
        <link href = '/styles/post.css' rel = 'stylesheet'></link>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title><% if (locals.post) { %>
            <%= post.title %>
            <% }%>
               
        </title>
    </head>
    <body>
        <%- include('./partials/header.html') %>
        <% if (locals.post) { %>
            <div class="blog-post container">
                <h2 class="blog-post-title"><%= post.title %></h2>
                <p class="blog-post-meta"><%= post.postDate %></p>
                <% if (post.image !== "None") {%>
                    <% let link = `/images/${post.image}.jpg`; %>
                    <img class = "blog-post-img" src = <%=link%> alt=<%=post.image%>></img>
                <%} %>
                <p class = "blog-post-body"><%- post.body %></p>
            </div>
        <% } %>
        

        <%- include('./partials/footer.html') %>

         
    </body>
</html>