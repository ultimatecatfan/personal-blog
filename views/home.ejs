<html>
    <head>
        <title>Homepage</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href = "/styles/header.css" rel = 'stylesheet'></link>
        <link href = "/styles/home.css" rel = 'stylesheet'></link>
        <link href = "/styles/footer.css" rel = 'stylesheet'></link>
    </head>
    <body>
        <%- include('partials/header.html') %>

        <div class="container my-5 welcome">
            <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
              <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
                <h1 class="display-4 fw-bold lh-1">Welcome.</h1>
                <p class="lead">A blog to document my life journey, my book reviews, and everything else.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                    <a href = "https://www.linkedin.com/in/yuting-guo-charlee/">
                        <button type="button" class="btn btn-light btn-lg px-4 me-md-3 fw-bold" >LinkedIn</button>
                    </a>
                </div>
              </div>
              <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
                  <img class="rounded-lg-3" src="/images/mountain.jpg" alt="Picture of a mountain range" width="720">
              </div>
            </div>
        </div>

        

        <div class = "container mb-5">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/cat-one.jpg" class="d-block w-100" alt="My cat">
                    <div class="carousel-caption d-none d-md-block">
                    <h5>Chelsea, my beautiful girl</h5>
                    <p>I adopted Chelsea in 2021!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/cat-two.jpg" class="d-block w-100" alt="My cat">
                    <div class="carousel-caption d-none d-md-block">
                    <h5>Tiger, my handsome boy</h5>
                    <p>I adopted Tiger in 2022!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/cat-three.jpg" class="d-block w-100" alt="My cat">
                    <div class="carousel-caption d-none d-md-block">
                    <h5>Chelsea again</h5>
                    <p>She's a cute, feisty girl!</p>
                    </div>
                </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <!--Most recent posts-->
        <div class = 'container recent-posts'>
            <h1>Recent Posts</h1>
            <% if (locals.recentPosts) {%>
                <% recentPosts.forEach(post => { %>
                    <div class="blog-post container">
                        <h2 class="blog-post-title"><%= post.title %></h2>
                        <p class="blog-post-meta"><%= post.postDate %></p>
                        <% if (post.image !== "None") {%>
                            <% let link = `/images/${post.image}.jpg`; %>
                            <img class = "blog-post-img" src = <%=link%> alt=<%=post.image%>></img>
                        <%} %>
                        <p class = "blog-post-body"><%- post.body %></p>
                    </div>
                <%}) %>
            <%} %>

            
        </div>

        <%- include("partials/footer.html") %>

        
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

   
</html>